{
  "name": "cybergrandpa-cross-browser-extension",
  "version": "1.0.0",
  "description": "A cross-browser compatible web extension boilerplate for safety online",
  "scripts": {
    "dev": "webpack --config webpack.config.js --mode=development",
    "dev:chrome": "cross-env BROWSER=chrome pnpm run dev --watch",
    "dev:firefox": "cross-env BROWSER=firefox pnpm run dev --watch",
    "dev:opera": "cross-env BROWSER=opera pnpm run dev --watch",
    "build": "pnpm run clean && pnpm run build:all",
    "build:all": "pnpm run build:chrome && pnpm run build:firefox && pnpm run build:opera",
    "build:chrome": "cross-env BROWSER=chrome webpack --config webpack.config.js --mode=production",
    "build:firefox": "cross-env BROWSER=firefox webpack --config webpack.config.js --mode=production",
    "build:opera": "cross-env BROWSER=opera webpack --config webpack.config.js --mode=production",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,css,scss}\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.300",
    "@types/node": "^20.8.0",
    "@types/webextension-polyfill": "^0.12.1",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-loader": "^3.1.9",
    "svelte-preprocess": "^5.1.3",
    "typescript": "^5.2.2",
    "webextension-polyfill": "^0.10.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "wext-manifest-loader": "^2.3.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a"
}
